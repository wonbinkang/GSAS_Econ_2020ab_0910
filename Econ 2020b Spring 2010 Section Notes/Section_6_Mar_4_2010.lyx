\begin_inset Newline newline
\end_inset


\begin_inset Formula \begin{equation}
1800\geq u_{1}(F,\,30,\, q_{1}|C,\,30,\, q_{2})\,\forall q_{1}\Rightarrow1800\geq u_{1}(F,\,30,\, q_{1}^{*}|C,\,30,\, q_{2})\,\forall q_{1}\label{inequality for C}\end{equation}

\end_inset


\begin_inset Formula \[
q_{1}^{*}=\arg\max_{q_{1}}q_{1}(120-q_{1}-q_{2})\Rightarrow q_{1}^{*}=\frac{120-q_{2}}{2}\]

\end_inset

